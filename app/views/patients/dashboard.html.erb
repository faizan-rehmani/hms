<section class="section services-section" id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title">
                    <h2>Explore Specialist</h2>
                </div>
            </div>
        </div>
        <div class="row">
          <% @specializations.each do |specializaion| %>
            <!-- feaure box -->
            <a href="/specialization/<%= specializaion.id %>" class="col-sm-6 col-lg-4" style="text-decoration:none">
                <div class="feature-box-1">
                    <div class="icon">
                        <i class="fa fa-desktop"></i>
                    </div>
                    <div class="feature-content">
                        <h5><%= specializaion.name %></h5>
                        <p><%= specializaion.description %></p>
                    </div>
                </div>
            </a>
            <% end %>

            <% @remain_specializations.each do |specializaion| %>
            <!-- feaure box -->
            <a href="/specialization/<%= specializaion.id %>" class="col-sm-6 col-lg-4 hidden" style="text-decoration:none">
                <div class="feature-box-1">
                    <div class="icon">
                        <i class="fa fa-desktop"></i>
                    </div>
                    <div class="feature-content">
                        <h5><%= specializaion.name %></h5>
                        <p><%= specializaion.description %></p>
                    </div>
                </div>
            </a>
            <% end %>
            <%# ending of feature %>
        </div>
    </div>
    <div class="text-center">
      <button type="button" class="btn btn-info" id="show_more_btn">Explore More</button>
    </div>
</section
